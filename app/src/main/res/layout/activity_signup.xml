<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".Activity.SignupActivity" android:background="@drawable/backgroundpic" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText android:layout_height="40dp" android:layout_width="300dp" android:layout_marginBottom="20dp" android:layout_gravity="center" android:layout_marginTop="30dp" android:textColor="#000000" android:hint="First Name" android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_0123456789" android:inputType="text" android:id="@+id/signupFirstNameId"/>

    <EditText android:layout_height="40dp" android:layout_width="300dp" android:layout_marginBottom="20dp" android:layout_gravity="center" android:textColor="#000000" android:hint="Last Name" android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_0123456789" android:inputType="text" android:id="@+id/signupLastNameId"/>

    <EditText android:layout_height="40dp" android:layout_width="300dp" android:layout_marginBottom="20dp" android:layout_gravity="center" android:textColor="#000000" android:hint="Email" android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_@.0123456789" android:inputType="text" android:id="@+id/signupEmailId"/>

    <EditText android:layout_height="40dp" android:layout_width="300dp" android:layout_marginBottom="20dp" android:layout_gravity="center" android:textColor="#000000" android:hint="Phone Number" android:digits="0123456789" android:inputType="number" android:id="@+id/signupPhoneId"/>

    <EditText android:layout_height="40dp" android:layout_width="300dp" android:layout_marginBottom="20dp" android:layout_gravity="center" android:textColor="#000000" android:hint="PassWord" android:inputType="textPassword" android:id="@+id/signupPasswordId"/>

    <EditText android:layout_height="40dp" android:layout_width="300dp" android:layout_marginBottom="50dp" android:layout_gravity="center" android:textColor="#000000" android:hint="City" android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_0123456789" android:inputType="text" android:id="@+id/signupCityId"/>

    <TextView android:layout_height="40dp" android:layout_width="300dp" android:layout_marginBottom="5dp" android:layout_gravity="center" android:textColor="#000000" android:gravity="center" android:textSize="15sp" android:text="I have read and agree to the APPS Terms and Conditions "/>

    <Button android:background="@drawable/loginbuttonshape" android:layout_height="40dp" android:layout_width="300dp" android:layout_gravity="center" android:textColor="#000000" android:inputType="none" android:id="@+id/signupButtonId2" android:textSize="16sp" android:text="SIGN UP"/>

</LinearLayout>