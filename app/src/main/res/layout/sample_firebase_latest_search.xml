<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="horizontal"
    android:id="@+id/parentLayoutId"
  >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <TextView
                    android:id="@+id/areaId"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginLeft="5dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_0123456789"
                    android:inputType="text"
                    android:text="Area"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/latestId"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginLeft="5dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_0123456789"
                    android:inputType="time"
                    android:text="BDT 10000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/priceId"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="5dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_0123456789"
                    android:inputType="text"
                    android:text="BDT 10000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sizeId1"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="5dp"
                    android:digits="0123456789"
                    android:inputType="text"
                    android:text="Flat Size"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/bedRoomId"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_0123456789"
                    android:inputType="text"
                    android:text="BDT 10000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/phoneId"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="5dp"
                    android:digits="0123456789"
                    android:text="Contact Number"
                    android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageSampleId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:text="BDT 10000"
                    android:textSize="15sp" />
        </LinearLayout>




</LinearLayout>


